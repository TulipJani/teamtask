<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="/stylesheets/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
    <div class="container">
        <div class="container">
            <div class="left-container">
                <h1>Welcome,<br></h1>
                <p class="user-info"></p>
                
                <!-- Use "fa-home" instead of "fa-duotone fa-house" -->
                <div class="navigation-option">
                    <i class="fas fa-home"></i><a href="/">HOME</a>
                </div>
                <div class="navigation-option">
                  <i class="fa-solid fa-house-user"></i><a href="/users/dashboard">Dashboard</a>
                </div>

                <div class="navigation-option">
                    <i class="fa-solid fa-people-group"></i><a href="/users/teamview">Teamview</a>
                </div>
                <div class="navigation-option">
                    <i class="fa-solid fa-list-check"></i><a href="/users/teamtask">Team tasks</a>
                </div>
                
                <div class="navigation-option">
                    <i class="fa-solid fa-list"></i><a href="#">Tasks to be done</a>
                </div>
                <div class="navigation-option">
                    <i class="fa-solid fa-right-from-bracket"></i><a href="/users/logout">Logout</a>
                </div>
            </div>

            <div class="right-container">
                <h1>ALL TASKS!</h1><br>
                <div class="task-container-scrollable">
                    <% if (allTasks && allTasks.length > 0) { %>
                        <% allTasks.forEach(task => { %>
                            <div class="task-container">
                                <div class="task-info">
                                    <div class="task-image">
                                        <img src="/uploads/<%= task.image %>" alt="Task Image" class="round-image">
                                    </div>
                                    <div class="task-details">
                                        <div class="title-icon">
                                            <i class="fa-solid fa-calendar-check"></i>
                                            <h2><%= task.title %></h2>
                                        </div>
                                        <% if (task.uploadedBy && task.uploadedBy.username) { %>
                                            <p class="uploaded-by">Uploaded by: <%= task.uploadedBy.username %></p>
                                        <% } else { %>
                                            <p class="uploaded-by">Uploaded by: Unknown User</p>
                                        <% } %>
                                        <p class="timestamp">Uploaded on: <%= task.timestamp.toLocaleString() %></p>
                                    </div>
                                </div>
                                <p class="description"><%= task.description %></p>
                            </div>
                            
                        <% }); %>
                    <% } else { %>
                        <p>No tasks available.</p>
                    <% } %>
                </div>
            </div>

</div>

    </div>
    <script src="/javascripts/dash.js"></script>
</body>
</html>
